# Fantasy Analyzer - Environment Variables Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ====================================
# Database Configuration
# ====================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=fantasy_analyzer
MYSQL_USERNAME=fantasy_user
MYSQL_PASSWORD=your_secure_password_here

# ====================================
# JWT Configuration
# ====================================
# IMPORTANT: Use a strong, randomly generated secret (minimum 256 bits)
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-please-change-this-to-a-secure-random-value
JWT_EXPIRATION=86400000

# ====================================
# Spring Profiles
# ====================================
# Options: dev, test, prod
SPRING_PROFILES_ACTIVE=dev

# ====================================
# Application Configuration
# ====================================
SERVER_PORT=8080

# ====================================
# External APIs
# ====================================
SLEEPER_API_URL=https://api.sleeper.app/v1
